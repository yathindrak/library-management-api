# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page

GET     /items                           controllers.ItemController.getAll

GET     /members                         controllers.MembersController.getAll

POST    /member                          controllers.MembersController.saveMember

POST    /items/savebook                  controllers.ItemController.saveBook

POST    /items/savedvd                   controllers.ItemController.saveDvd

DELETE  /items/book/:id                  controllers.ItemController.deleteBook(id: String)

POST    /borrow/:id/:date/:borrower      controllers.ItemController.borrowBook(id: String, date: String, borrower: String)

POST    /borrowDvd/:id/:date/:borrower   controllers.ItemController.borrowDvd(id: String, date: String, borrower: String)

POST    /returnBook/:id                  controllers.ItemController.returnBook(id: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
